<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NYTimes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueLight</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blackDark</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="21">@color/blackDark</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout">@layout/activity_splash_screen</item>
    </style>

    <style name="ButtonSecondary" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:drawableRight">@drawable/ic_arrow_forward_24</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="backgroundTint">@color/blueLight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/engravers_old_english_bt</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/shape_button</item>
        <item name="backgroundTint">@color/blueLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/times_new_roman_bold_italic</item>
    </style>

    <style name="TextSection">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/times_new_roman_bold_italic</item>
    </style>

    <style name="TextSubsection">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/times_new_roman_bold_italic</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/times_new_roman_italic</item>
    </style>

    <style name="TextTitleCard">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/times_new_roman_italic</item>
    </style>

    <style name="TextStyleAll">
        <item name="android:fontFamily">@font/times_new_roman</item>
    </style>

    <style name="BackgroundCardView">
        <item name="cardBackgroundColor">@color/blueLight</item>
    </style>

    <style name="TintStyle">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@drawable/shape_background_dark</item>
    </style>
</resources>